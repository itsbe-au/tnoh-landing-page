---
import Layout from "../layouts/Layout.astro";
import {
  MapIcon,
  MapPinIcon,
  Phone,
  Mail,
  Instagram,
  Facebook,
} from "@lucide/astro";
---

<Layout>
  <section class="mb-8 px-4">
    <h2 class="text-3xl mb-8 text-center text-nook-100">Visit Us</h2>
    <div class="flex flex-col lg:flex-row gap-8 max-w-4xl mx-auto">
      <!-- Contact Details -->
      <div class="bg-nook-800 rounded-lg p-6 lg:w-1/2">
        <h3 class="text-xl mb-4 text-nook-100 text-center lg:text-left">
          Contact
        </h3>
        <div class="space-y-3">
          <a
            href="https://maps.app.goo.gl/12CMZAJnTSuSz5yC8"
            target="_blank"
            class="flex items-center gap-3">
            <MapPinIcon class="text-sm w-5 h-5 flex-shrink-0 text-nook-400" />
            <p class="text-nook-200">8 Hopkins Road, Warrnambool VIC 3280</p>
          </a>
          <a href="tel:+61345209318" class="flex items-center gap-3">
            <Phone class="text-sm w-5 h-5 flex-shrink-0 text-nook-400" />
            <p class="text-nook-200">(03) 4520 9318</p>
          </a>
          <a
            href="mailto:mailthenookonhopkins@gmail.com"
            class="flex items-center gap-3">
            <Mail class="text-sm w-5 h-5 flex-shrink-0 text-nook-400" />
            <p class="text-nook-200">mailthenookonhopkins@gmail.com</p>
          </a>
          <div class="mt-6 pt-4 border-t border-nook-700">
            <p class="text-sm text-nook-400 mb-3 text-center lg:text-left">
              Follow Us
            </p>
            <div class="flex justify-center lg:justify-start gap-4">
              <a
                href="https://instagr.am/thenookonhopkins"
                class="text-nook-300 hover:text-nook-100 transition-colors p-2">
                <Instagram class="w-6 h-6" /></a
              >
              <a
                href="https://facebook.com/thenookonhopkins"
                class="text-nook-300 hover:text-nook-100 transition-colors p-2"
                ><Facebook class="w-6 h-6" /></a
              >
            </div>
          </div>
        </div>
      </div>

      <div class="bg-nook-800 rounded-lg p-6 lg:w-1/2">
        <h3 class="text-xl mb-4 text-nook-100 text-center lg:text-left">
          Opening Hours
        </h3>
        <div class="space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-nook-200">Mon, Wed, Thu, Fri</span>
            <span class="text-nook-100 font-medium">6:00am — 3:00pm</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-nook-200">Tues</span>
            <span class="text-red-400 font-medium">CLOSED</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-nook-200">Sat, Sun</span>
            <span class="text-nook-100 font-medium">7:00am — 3:00pm</span>
          </div>
          <div class="mt-6 pt-4 border-t border-nook-700 text-center">
            <p class="text-sm text-nook-400">Public holidays may vary</p>
          </div>
        </div>
      </div>

      <!-- Contact & Location -->
    </div>
  </section>

  <!-- Map Section -->
  <section class="mb-16 px-4">
    <div class="max-w-4xl mx-auto">
      <div class="bg-nook-800 rounded-lg p-4 shadow-lg">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3126.9834995467418!2d142.50475881192236!3d-38.3956305673998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6acd4d71f49de3ef%3A0xd3ccca93509a0105!2sThe%20Nook%20on%20Hopkins!5e0!3m2!1sen!2sau!4v1769983796036!5m2!1sen!2sau"
          class="w-full h-64 md:h-80 lg:h-96 rounded-lg shadow-inner"
          style="border:0; filter: invert(90%) hue-rotate(180deg) saturate(75%) brightness(90%);"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>
      </div>
    </div>
  </section>
</Layout>
