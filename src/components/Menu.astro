---
import MenuItem from "./MenuItem.astro";

---

<section class="mb-16">
    <h2 class="text-3xl mb-8 text-center text-nook-100">Our Menu</h2>

    <div class="grid md:grid-cols-2 gap-8">
        <!-- Coffee Menu -->
        <div class="bg-nook-900 rounded-lg p-6">
            <h3 class="text-xl mb-4 text-nook-100 border-b border-nook-700 pb-2">Coffee</h3>
            <ul class="space-y-3">
                <MenuItem name="Flat White" description="Almond, Oat, Soy, or Coconut Milk +$0.50" price="5.5" />
            </ul>
        </div>

        <!-- Food Menu -->
        <div class="bg-nook-900 rounded-lg p-6">
            <h3 class="text-xl mb-4 text-nook-100 border-b border-nook-700 pb-2">Food</h3>
            <ul class="space-y-3">
                <MenuItem name="Porridge" description="Rolled oats, quinoa, vanilla milk, mixed berry compote, fresh fruits, candied muesli, maple syrup" price="21.0" />
            </ul>
        </div>

    </div>
</section>
